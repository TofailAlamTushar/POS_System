@model SuperShopManagementSystem.Models.Operation.Expense

@{
    ViewBag.Title = "DetailsPdf";
    Layout = "~/Views/Shared/_LayoutPdf.cshtml";
}
<div class="row">
    <div class="col-md-12">

        <h4>Expense Result</h4>
        <hr />
        <table>
            <tr>
                <td>Employee Name :</td>
                <td>&nbsp;@Html.DisplayFor(model => model.Employee.Name)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Outlet.Name) :</td>
                <td>&nbsp;@Html.DisplayFor(model => model.Outlet.Name)</td>
            </tr>
            <tr>
                <td> @Html.DisplayNameFor(model => model.ExpenseDate) :</td>
                <td>&nbsp;@Html.DisplayFor(model => model.ExpenseDate)</td>
            </tr>
        </table>
        <br />
        <br />
        <br />
        <h4>Expense Item Details</h4>
        <table class="table table-bordered table-condensed table-hover table-responsive table-striped">
            <tr style="background-color:cornflowerblue; color:white;">
                <th>Sl</th>
                <th>Item</th>
                <th>Quantity</th>
                <th>Amount</th>
                <th>Line Price</th>
            </tr>
            @{ int sl = 1;}
            @foreach (var item in Model.ExpenseDetails)
            {
                var linePrice = item.Amount * item.Quantity;
                <tr>
                    <td>@sl</td>
                    <td>@item.ExpenseItem.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Amount</td>
                    <td>@linePrice</td>
                </tr>
                sl++;
            }
        </table>
    </div>
    <br />
    <br />
    <br />
    <br />
    <div class="col-md-4" style="float:right">
        <table >
            <tr>
                <td> @Html.DisplayNameFor(model => model.Total) :</td>
                <td>&nbsp;@Html.DisplayFor(model => model.Total)</td>
            </tr>
            <tr>
                <td> @Html.DisplayNameFor(model => model.Due) :</td>
                <td>&nbsp; @Html.DisplayFor(model => model.Due)</td>
            </tr>
        </table>
    </div>
</div>

