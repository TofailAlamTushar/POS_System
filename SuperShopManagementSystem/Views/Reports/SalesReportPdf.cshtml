@model IEnumerable<SuperShopManagementSystem.Models.Operation.Sale>

@{
    ViewBag.Title = "SalesReportPdf";
    Layout = "~/Views/Shared/_LayoutPdf.cshtml";
}

<h2>Sales Report</h2>
<hr />
@{decimal TotalPrice = 0;
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-condensed table-hover table-responsive table-striped">
            <tr style="background-color:cornflowerblue; color:white">
                <th>
                    SL
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Outlet.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SaleDate)
                </th>
                <th>
                    Description
                </th>
                <th>
                    Customer
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
            </tr>

            @if (Model != null)
            {
                int sl = 0;
                foreach (var item in Model)
                {
                    TotalPrice = TotalPrice + item.Total;
            <tr>
                <td>
                    @(++sl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Outlet.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SaleDate)
                </td>
                <td>
                    <table class="table table-bordered table-condensed table-hover table-responsive table-striped">
                        <tr style="background-color:cornflowerblue; color:white">
                            <td>Item Names</td>
                            <td>Quantity</td>
                            <td>Price</td>
                        </tr>
                        @foreach (var itemDes in item.SalesDetails)
            {
                <tr>
                    <td>@itemDes.Item.Name</td>
                    <td>@itemDes.Quntity</td>
                    <td>@itemDes.Price</td>
                </tr>
}
                    </table>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CusName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
                }
            }
        </table>
    </div>
</div>
if (TotalPrice != 0)
{
    <div class="row">
        <div style="float:right" class="col-md-2">
            <table>
                <tr>
                    <td><b>Total :</b></td>
                    <td><b>&nbsp;@TotalPrice</b></td>
                </tr>
            </table>
        </div>
    </div>
}
    }